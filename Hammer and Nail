        <button class="nav-btn" onclick="scrollToTop()">üìñ Start</button>
        <button class="nav-btn" onclick="scrollToReflection()">üí≠ Reflect</button>
        <button class="nav-btn" onclick="scrollToDiscussion()">üë• Discuss</button>
        <button class="nav-btn" onclick="scrollToEnd()">üèÅ End</button>
    </div>

    <script>
        // Ensure DOM is loaded before running scripts
        document.addEventListener('DOMContentLoaded', function() {
            
            // Update progress bar based on scroll
            function updateProgressBar() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                const docHeight = Math.max(
                    document.body.scrollHeight,
                    document.body.offsetHeight,
                    document.documentElement.clientHeight,
                    document.documentElement.scrollHeight,
                    document.documentElement.offsetHeight
                ) - window.innerHeight;
                
                const scrollPercent = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
                const progressBar = document.getElementById('progressBar');
                if (progressBar) {
                    progressBar.style.width = Math.min(scrollPercent, 100) + '%';
                }
            }

            window.addEventListener('scroll', updateProgressBar);
            window.addEventListener('resize', updateProgressBar);
            
            // Initial call
            updateProgressBar();

            // Save journal entries
            const journalAreas = document.querySelectorAll('.journal-area');
            journalAreas.forEach(function(textarea, index) {
                // Try to load saved content (safely handle localStorage)
                try {
                    const savedContent = localStorage.getItem('journal_' + index);
                    if (savedContent) {
                        textarea.value = savedContent;
                    }
                } catch (e) {
                    // localStorage might not be available
                    console.log('LocalStorage not available');
                }
                
                // Save content on change
                textarea.addEventListener('input', function() {
                    try {
                        localStorage.setItem('journal_' + index, textarea.value);
                    } catch (e) {
                        // localStorage might not be available
                        console.log('Could not save to localStorage');
                    }
                });
            });

        });

        // Navigation functions
        function scrollToTop() {
            window.scrollTo({ 
                top: 0, 
                behavior: window.requestAnimationFrame ? 'smooth' : 'auto'
            });
        }

        function scrollToReflection() {
            const reflectionPage = document.querySelector('.reflection-page');
            if (reflectionPage) {
                reflectionPage.scrollIntoView({ 
                    behavior: window.requestAnimationFrame ? 'smooth' : 'auto'
                });
            }
        }

        function scrollToDiscussion() {
            const discussionPage = document.querySelector('.discussion-guide');
            if (discussionPage) {
                discussionPage.scrollIntoView({ 
                    behavior: window.requestAnimationFrame ? 'smooth' : 'auto'
                });
            }
        }

        function scrollToEnd() {
            window.scrollTo({ 
                top: document.body.scrollHeight, 
                behavior: window.requestAnimationFrame ? 'smooth' : 'auto'
            });
        }

        // Interactive prompt expansion
        function togglePrompt(element) {
            if (element && element.classList) {
                element.classList.toggle('expanded');
            }
        }

        // Tab navigation for discussion guide
        function showTab(tabName) {
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            for (let i = 0; i < tabContents.length; i++) {
                tabContents[i].classList.remove('active');
            }

            // Remove active class from all tab buttons
            const tabButtons = document.querySelectorAll('.tab-btn');
            for (let i = 0; i < tabButtons.length; i++) {
                tabButtons[i].classList.remove('active');
            }

            // Show selected tab content
            const selectedTab = document.getElementById(tabName);
            if (selectedTab) {
                selectedTab.classList.add('active');
            }
            
            // Add active class to clicked button (find by checking textContent)
            for (let i = 0; i < tabButtons.length; i++) {
                const buttonText = tabButtons[i].textContent || tabButtons[i].innerText;
                if ((tabName === 'personal' && buttonText === 'Personal') ||
                    (tabName === 'small-group' && buttonText === 'Small Group') ||
                    (tabName === 'workplace' && buttonText === 'Workplace') ||
                    (tabName === 'classroom' && buttonText === 'Classroom')) {
                    tabButtons[i].classList.add('active');
                    break;
                }
            }
        }
    </script>
</body>
</html>
